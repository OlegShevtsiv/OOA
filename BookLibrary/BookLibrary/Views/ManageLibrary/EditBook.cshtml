@using Services.Interfaces;
@model BookLibrary.ViewModels.ManageLibrary.BookViewModel
@{
    ViewData["Title"] = "Edit book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IAuthorService authorService
<h2 class="mt-5">Book editing</h2>
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditBook" asp-controller="ManageLibrary" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label class="control-label">Title</label>
                <input type="text" asp-for="Title" class="form-control" required />
            </div>
            <div class="form-row mt-5">
                <div class="col-1 d-flex align-items-center">
                    <label class="control-label">Author</label>
                </div>
                <div class="col">
                    <select type="text" asp-for="AuthorId" class="form-control form-control-lg" required>
                        @foreach (var a in authorService.GetAll())
                        {
                            <option value="@a.Id">@a.Name @a.Surname</option>
                        }
                    </select>
                </div>
                <div class="col-2 d-flex justify-content-end">
                    <a class="btn btn-sm btn-success" asp-action="AddAuthor">Add new author</a>
                </div>
            </div>
            <div class="form-row my-5">
                <div class="col">
                    <label class="control-label">Release year</label>
                    <input type="number" asp-for="Year" class="form-control form-control-lg" required />
                </div>
                <div class="col">
                    <label class="control-label">Image</label>
                    <input type="file" asp-for="Image" class="form-control-file form-control-lg border" required />
                </div>
                <div class="col">
                    <label class="control-label">File of book</label>
                    <input type="file" asp-for="FileBook" class="form-control-file form-control-lg border" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Genre</label>
                <input type="text" asp-for="Genre" class="form-control" required />
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <textarea type="text" asp-for="Description" class="form-control" rows="8"></textarea>
            </div>

            <input type="number" asp-for="Rate" hidden />
            <input type="number" asp-for="RatesAmount" hidden />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>